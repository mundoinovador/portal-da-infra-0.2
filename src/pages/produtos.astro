---
import Base from "@layouts/Base.astro";
import Header from "@components/Header.astro";
import { FormProduct } from "@components/react/FormProduct";
import {SelectFilter} from "@components/react/SelectFilter"
---

<Base>
    <Header typeHeader="header-normal" />

    <main class="py-[2rem]">
        <div class="flex flex-col items-center w-full px-[10%] gap-[1rem]">
            <FormProduct client:load />
            
            <div class="w-full flex justify-end">
                <SelectFilter client:load />
            </div>
        </div>
    </main>
</Base>