---
const styleHeaderLink = 'text-sm links border-b border-transparent px-2 transition-all duration-300 hover:border-b-white text-white'
---

<script>
    const header:any = document.querySelector('header');
    const linkNav:any = document.querySelectorAll('.links');

    window.addEventListener('scroll', () => {
    if (window.scrollY > 160) {
        header.classList.add('bg-white');
        header.classList.remove('bg-transparent');

        linkNav.forEach((link:any) => {
        link.classList.add('text-black');
        link.classList.remove('text-white');
        link.classList.add('hover:border-b-black')
        link.classList.remove('hover:border-b-white')
        });
    } else {
        header.classList.add('bg-transparent');
        header.classList.remove('bg-white');

        linkNav.forEach((link:any) => {
        link.classList.add('text-white');
        link.classList.remove('text-black');
        link.classList.add('hover:border-b-white')
        link.classList.remove('hover:border-b-black')
        });
    }
    });
</script>

<header class="flex justify-between items-center px-[5%] py-4 sticky top-0 transition-colors duration-500">
    <a href="/" class="w-20 transition-transform duration-300 hover:scale-115">
        <img src='/logo-sem-texto.png' />
    </a>

    <nav class="flex gap-2">
        <a href="/" class={styleHeaderLink}>Home</a>
        <a href="#" class={styleHeaderLink}>Contatos</a>
        <a href="#" class={styleHeaderLink}>Produtos</a>
    </nav>
</header>